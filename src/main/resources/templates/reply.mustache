<section style="background-color: #e7effd;">
    <div class="container mt-5 py-5 text-dark">
        <div class="row d-flex justify-content-center">
            <div class="col-md-11 col-lg-9 col-xl-7">
                {{#replies}}
                    <div class="d-flex flex-start mb-4">
                        <img class="rounded-circle shadow-1-strong me-3"
                             src="{{profileImageUrl}}" alt="avatar" width="65"
                             height="65"/>
                        <div class="card w-100 shadow-lg">
                            <div class="card-body p-4">
                                <div class="">
                                    <h5>{{author}}</h5>
                                    <p class="small" style="color: grey;">{{whenCreated}}</p>
                                    <p>{{content}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/replies}}

                <!-- comment text area -->
                <div class="d-flex flex-start mb-4">
                    <img class="rounded-circle shadow-1-strong me-3"
                         src="{{profileImageUrl}}" alt="avatar" width="65"
                         height="65"/>
                    <div class="card w-100 shadow-lg">
                        <div class="card-body p-4">
                            <div class="">
                                <form id="reply-register">
                                    <div id="reply-alert-target">
                                    </div>
                                    <div class="form-outline w-100">
                                    <textarea class="form-control mb-2" id="reply-register-content"
                                              rows="4"
                                              name="content"
                                              style="background: #fff;" placeholder="댓글을 입력해주세요." required></textarea>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <button id="reply-register-submit-button" type="button"
                                                class="btn btn-dark btn-sm">등록
                                        </button>
                                        <button id="reply-register-cancel-button" type="button"
                                                class="btn btn-outline-dark btn-sm">취소
                                        </button>
                                    </div>
                                    <input type="hidden" name="musicId" id="reply-register-music-id"
                                           value="{{music.id}}">
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
